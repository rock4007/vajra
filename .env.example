# Vajra Kavach - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=VajraKavach
APP_VERSION=1.0.0
APP_ENV=production  # Options: development, staging, production
DEBUG=false  # ALWAYS false in production
SECRET_KEY=your-secret-key-here-min-32-characters-long-random-string

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4  # Number of Uvicorn workers
LOG_LEVEL=info  # Options: debug, info, warning, error, critical

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# Database Connection
DATABASE_URL=postgresql://user:password@host:5432/database
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# Encryption Keys (AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded
ENCRYPTION_ALGORITHM=AES-256-GCM

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_HASH_ALGORITHM=argon2id
PASSWORD_SALT_ROUNDS=12

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER=VajraKavach
OTP_VALIDITY_SECONDS=300

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# =============================================================================
# EXTERNAL APIs
# =============================================================================
# SMS/Notification Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@vajrakavach.com

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key
APNS_CERTIFICATE_PATH=/path/to/apns-certificate.pem

# =============================================================================
# GEOLOCATION & MAPPING
# =============================================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
LOCATION_ACCURACY_METERS=50
GEOFENCING_ENABLED=true

# =============================================================================
# AI/ML SERVICES
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-if-using-ai-features
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key

# Log Management
LOG_FILE_PATH=/var/log/vajrakavach/app.log
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=90

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
# Data Retention
DATA_RETENTION_DAYS=365
BACKUP_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# Privacy Settings
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_LOCALIZATION_ENABLED=true
DEFAULT_DATA_REGION=india  # Options: india, eu, us, asia

# Incident Reporting
CERT_IN_REPORTING_ENABLED=true
CERT_IN_EMAIL=cert-in@example.com
INCIDENT_NOTIFICATION_HOURS=6  # CERT-In requires 6-hour reporting

# =============================================================================
# CLOUD INFRASTRUCTURE
# =============================================================================
# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=vajrakavach-storage
AWS_KMS_KEY_ID=your-kms-key-id

# Kubernetes
K8S_NAMESPACE=production
K8S_CLUSTER_NAME=vajra-cluster
K8S_SERVICE_ACCOUNT=vajra-service-account

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_CACHE_TTL_SECONDS=300

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# =============================================================================
# EMERGENCY SERVICES INTEGRATION
# =============================================================================
POLICE_API_ENDPOINT=https://api.police.gov/emergency
AMBULANCE_API_ENDPOINT=https://api.ambulance.service/dispatch
FIRE_DEPT_API_ENDPOINT=https://api.fire.service/alert
EMERGENCY_API_KEY=your-emergency-services-api-key

# =============================================================================
# BIOMETRIC AUTHENTICATION
# =============================================================================
FINGERPRINT_HASH_ALGORITHM=SHA256
FINGERPRINT_MATCH_THRESHOLD=0.85
BIOMETRIC_ENCRYPTION_ENABLED=true
BIOMETRIC_DATA_RETENTION_DAYS=90

# =============================================================================
# CODE PROTECTION SYSTEM
# =============================================================================
CODE_PROTECTION_ENABLED=true
FILE_INTEGRITY_CHECK_INTERVAL_SECONDS=300
ANTI_DEBUG_ENABLED=true
TAMPER_DETECTION_ENABLED=true
AUTO_HEAL_ENABLED=true

# =============================================================================
# THREAT INTELLIGENCE
# =============================================================================
THREAT_MODEL_UPDATE_DAYS=90
THREAT_FEED_URL=https://threat-intel.vajrakavach.com/feed
THREAT_FEED_API_KEY=your-threat-feed-api-key
VULNERABILITY_SCAN_ENABLED=true

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE_CRON=0 2 * * *  # Daily at 2 AM
BACKUP_ENCRYPTION_ENABLED=true
DISASTER_RECOVERY_REGION=ap-southeast-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_VOICE_CALL=true
FEATURE_VIDEO_CALL=true
FEATURE_PANIC_BUTTON=true
FEATURE_LIVE_TRACKING=true
FEATURE_SAFE_ZONE_ALERTS=true
FEATURE_AI_THREAT_DETECTION=true

# =============================================================================
# CORS & SECURITY HEADERS
# =============================================================================
CORS_ALLOWED_ORIGINS=https://vajrakavach.com,https://app.vajrakavach.com
CORS_ALLOW_CREDENTIALS=true
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE_SECONDS=31536000

# =============================================================================
# TESTING (Development/Staging Only)
# =============================================================================
TESTING_MODE=false  # NEVER true in production
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db
MOCK_EMERGENCY_SERVICES=false
SKIP_AUTHENTICATION=false  # NEVER true in production

# =============================================================================
# COMPLIANCE CONTACTS
# =============================================================================
DPO_EMAIL=dpo@vajrakavach.com
COMPLIANCE_EMAIL=compliance@vajrakavach.com
SECURITY_EMAIL=security@vajrakavach.com
SUPPORT_EMAIL=support@vajrakavach.com

# =============================================================================
# NOTES
# =============================================================================
# 1. NEVER commit the .env file to version control
# 2. Keep this file secure with restricted permissions (chmod 600)
# 3. Rotate all secrets regularly (every 90 days recommended)
# 4. Use strong random values for all keys and secrets
# 5. Different values for development, staging, and production
# 6. Review and update as new features are added
# 7. Document any custom environment variables added
