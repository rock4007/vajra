<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vajrakavach.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VAJRA Shakti Kavach</name>
    <description>Women Safety and Evidence Preservation System</description>
    <author email="support@vajrakavach.com" href="https://vajrakavach.com/">Soumodeep Guha</author>
    
    <content src="index.html" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <access origin="*" />
    
    <!-- iOS specific -->
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#ef4444" />
    <preference name="StatusBarStyle" value="lightcontent" />
    
    <!-- Android specific -->
    <preference name="AndroidXEnabled" value="true" />
    <preference name="GradlePluginGoogleServicesEnabled" value="true" />
    <preference name="GradlePluginGoogleServicesVersion" value="4.3.10" />
    
    <!-- Permissions -->
    <permission name="android.permission.INTERNET" />
    <permission name="android.permission.ACCESS_FINE_LOCATION" />
    <permission name="android.permission.ACCESS_COARSE_LOCATION" />
    <permission name="android.permission.CAMERA" />
    <permission name="android.permission.RECORD_AUDIO" />
    <permission name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <permission name="android.permission.CALL_PHONE" />
    <permission name="android.permission.WRITE_CONTACTS" />
    <permission name="android.permission.READ_CONTACTS" />
    
    <!-- Plugins -->
    <plugin name="cordova-plugin-geolocation" spec="^4.1.0">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="We need your location for emergency services" />
    </plugin>
    <plugin name="cordova-plugin-device" spec="^2.0.3" />
    <plugin name="cordova-plugin-file" spec="^6.0.2" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />
    <plugin name="cordova-plugin-camera" spec="^4.1.0" />
    <plugin name="cordova-plugin-contacts" spec="^3.0.1" />
    <plugin name="cordova-plugin-device-orientation" spec="^2.0.0" />
    
    <!-- Icons and Splash Screens -->
    <platform name="ios">
        <icon src="assets/ios/icon.png" width="57" height="57" />
        <icon src="assets/ios/icon@2x.png" width="114" height="114" />
        <icon src="assets/ios/icon-40.png" width="40" height="40" />
        <icon src="assets/ios/icon-40@2x.png" width="80" height="80" />
        <icon src="assets/ios/icon-50.png" width="50" height="50" />
        <icon src="assets/ios/icon-50@2x.png" width="100" height="100" />
        <icon src="assets/ios/icon-60.png" width="60" height="60" />
        <icon src="assets/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="assets/ios/icon-72.png" width="72" height="72" />
        <icon src="assets/ios/icon-72@2x.png" width="144" height="144" />
        <icon src="assets/ios/icon-76.png" width="76" height="76" />
        <icon src="assets/ios/icon-76@2x.png" width="152" height="152" />
        <splash src="assets/ios/splash.png" width="320" height="480" />
        <splash src="assets/ios/splash@2x.png" width="640" height="960" />
    </platform>
    
    <platform name="android">
        <icon src="assets/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="assets/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="assets/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="assets/android/icon-96-xhdpi.png" density="xhdpi" />
        <splash src="assets/android/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="assets/android/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="assets/android/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="assets/android/splash-port-xhdpi.png" density="port-xhdpi" />
    </platform>
</widget>
