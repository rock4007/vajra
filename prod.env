# Copy this file to prod.env and fill the secrets.

FLASK_ENV=production
FLASK_DEBUG=0
REGION=global
SUPPORTED_REGIONS=europe,asia

# Alerts
ALERT_EMAILS=alerts@example.com
ALERT_PHONES=+10000000000
ALERT_WA=whatsapp:+10000000000
ALERT_NTFY_TOPICS=vajra-alerts

# SMTP (for email alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=vajra-alerts@example.com

# Twilio (for SMS/WhatsApp alerts)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
TWILIO_WA_FROM=

# Optional datastore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password
