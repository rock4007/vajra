# .env Template for Vajra Backend
# Copy to .env and fill in your values

# ============================================
# Alert Configuration
# ============================================
ALERT_EMAILS=your-email@example.com
ALERT_PHONES=+91XXXXXXXXXX
ALERT_NTFY_TOPICS=vajra-alerts

# ============================================
# SMTP Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# Twilio Configuration (Optional)
# ============================================
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token
TWILIO_FROM=+1XXXXXXXXXX

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=production
FLASK_DEBUG=0

# ============================================
# Database Configuration (Optional)
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://postgres:secure_password_here@postgres:5432/vajra

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Grafana Configuration (Optional)
# ============================================
GRAFANA_PASSWORD=secure_grafana_password

# ============================================
# AWS Configuration (if deploying to AWS)
# ============================================
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_ACCOUNT_ID=123456789012

# ============================================
# Azure Configuration (if deploying to Azure)
# ============================================
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=your-resource-group
# AZURE_REGISTRY_NAME=yourregistryname

# ============================================
# GCP Configuration (if deploying to GCP)
# ============================================
# GCP_PROJECT=your-project-id
# GCP_REGION=us-central1

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================
# CORS Settings
# ============================================
CORS_ORIGINS=https://yourdomain.com

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
