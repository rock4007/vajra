{
  "name": "vajra-shakti-kavach",
  "version": "1.0.0",
  "description": "Women Safety and Evidence Preservation System",
  "main": "main.js",
  "homepage": "./",
  "author": "Soumodeep Guha",
  "license": "MIT",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run react-build && electron-builder",
    "build-win": "npm run react-build && electron-builder --win",
    "build-mac": "npm run react-build && electron-builder --mac",
    "build-linux": "npm run react-build && electron-builder --linux",
    "build-all": "npm run react-build && electron-builder -mwl",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.vajrakavach.app",
    "productName": "VAJRA Shakti Kavach",
    "files": [
      "public/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "msi"
      ],
      "certificateFile": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VAJRA Shakti Kavach"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "rock4007",
      "repo": "-VAJRA-Shakti-Kavach"
    }
  },
  "homepage": "./"
}
